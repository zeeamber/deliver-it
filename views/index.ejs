<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.3.10/angular.min.js"></script>  
    <script src="http://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>
    <script src="/javascripts/app.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body ng-app="deliver-it">
      <div class="main-wrapper">
          <div class="main-heading">
              <div class="pull-left">
                  <h1> <%= title %> </h1>
              </div>
              <div class="pull-right">
                <% include partials/header.ejs %>
              </div>
          </div>
          <ui-view></ui-view>
      </div>
      <script type="text/ng-template" id="/home.html">
            <div ng-repeat = "task in tasks">
                <span> {{task._id}} </span>
            </div>
      </script>
      <script type="text/ng-template" id="/register.html">
            <div ng-show="error">
                <span>{{ error.message }}</span>
            </div>
            <form ng-submit="register()" style="margin-top:30px;">
                <h3>Register</h3>
                <div>
                    <input type="text" placeholder="Username" ng-model="user.username"></input>
                </div>
                <div>
                    <input type="password" placeholder="Password" ng-model="user.password"></input>
                </div>
                <button type="submit" class="btn btn-primary">Register</button>
            </form>
      </script>
      <script type="text/ng-template" id="/login.html">
            <div ng-show="error">
                <span>{{ error.message }}</span>
            </div>
            <form ng-submit="login()" style="margin-top:30px;">
                <h3>Login</h3>
                <div>
                    <input type="text" placeholder="Username" ng-model="user.username"></input>
                </div>
                <div>
                    <input type="password" placeholder="Password" ng-model="user.password"></input>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
      </script>
      <script type="text/ng-template" id="/adminlogin.html">
            <div ng-show="error">
                <span>{{ error.message }}</span>
            </div>
            <form ng-submit="adminlogin()" style="margin-top:30px;">
                <h3>Login</h3>
                <div>
                    <input type="text" placeholder="Username" ng-model="user.username"></input>
                </div>
                <div>
                    <input type="password" placeholder="Password" ng-model="user.password"></input>
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
      </script>
      <script type="text/ng-template" id="/dashboard.html">
            <h2> Dashboard </h2>
            <a href="" ng-click="logout()">LogOut</a>
            <div ng-repeat = "task in tasks">
                <span> {{task._id}} </span>
            </div>
            <a href="/#/client/createtask">New Task</a>
      </script>
      <script type="text/ng-template" id="/admindashboard.html">
            <h2> Dashboard </h2>
            <a href="" ng-click="logout()">LogOut</a>
            <div ng-repeat = "task in tasks">
                <span> {{task._id}} </span>
            </div>
            <a href="/#/admin/createagent">New Agent</a>
      </script>
      <script type="text/ng-template" id="/createtask.html">
            <div ng-show="error">
                <span>{{ error.message }}</span>
            </div>
            <form ng-submit="create_task()" style="margin-top:30px;">
                <h3>Create new task</h3>
                <div>
                    <input type="text" placeholder="pick-up address" ng-model="task.pickup_add"></input>
                </div>
                <div>
                    <input type="text" placeholder="shipping address" ng-model="task.shipping_add"></input>
                </div>
                <button type="submit" class="btn btn-primary">Done</button>
            </form>
      </script>
      <script type="text/ng-template" id="/createagent.html">
            <div ng-show="error">
                <span>{{ error.message }}</span>
            </div>
            <form ng-submit="create_agent()" style="margin-top:30px;">
                <h3>Create new task</h3>
                <div>
                    <input type="text" placeholder="name" ng-model="agent.name"></input>
                </div>
                <div>
                    <input type="text" placeholder="phone number" ng-model="agent.phone_number"></input>
                </div>
                <button type="submit" class="btn btn-primary">Done</button>
            </form>
      </script>
      <script type="text/ng-template" id="tasks.html"></script>
      <script type="text/ng-template" id="agents.html"></script>
      <script src="/socket.io/socket.io.js"></script>
      <script>var socket = io();</script>
  </body>
</html>
